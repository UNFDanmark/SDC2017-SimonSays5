<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/redP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ea4335"
            android:onClick="P2TrykkedePåRød"
            android:text="" />

        <Button
            android:id="@+id/blueP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#4285f4"
            android:onClick="P2TrykkedePåBlå"
            android:text="" />

        <Button
            android:id="@+id/greenP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#34a853"
            android:onClick="P2TrykkedePåGrøn"
            android:text="" />

        <Button
            android:id="@+id/yellowP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#fbbc05"
            android:onClick="P2TrykkedePåGul"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/yellowP1Btn"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#fbbc05"
            android:onClick="P1TrykkedePåGul"
            android:text="" />

        <Button
            android:id="@+id/GreenP1Bnt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#34a853"
            android:onClick="P1TrykkedePåGrøn"
            android:text="" />

        <Button
            android:id="@+id/BlueP1Bnt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#4285f4"
            android:onClick="P1TrykkedePåBlå"
            android:text="" />

        <Button
            android:id="@+id/RedP1Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ea4335"
            android:onClick="P1TrykkedePåRød"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/MiddelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutBase"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/middelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:rotation="90"
            android:textAlignment="center"
            android:textSize="25sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/redP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ea4335"
            android:onClick="P2TrykkedePåRød"
            android:text="" />

        <Button
            android:id="@+id/blueP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#4285f4"
            android:onClick="P2TrykkedePåBlå"
            android:text="" />

        <Button
            android:id="@+id/greenP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#34a853"
            android:onClick="P2TrykkedePåGrøn"
            android:text="" />

        <Button
            android:id="@+id/yellowP2Btn"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#fbbc05"
            android:onClick="P2TrykkedePåGul"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yellowP1Btn"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#fbbc05"
            android:onClick="P1TrykkedePåGul"
            android:text="" />

        <Button
            android:id="@+id/greenP1Bnt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#34a853"
            android:onClick="P1TrykkedePåGrøn"
            android:text="" />

        <Button
            android:id="@+id/blueP1Bnt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#4285f4"
            android:onClick="P1TrykkedePåBlå"
            android:text="" />

        <Button
            android:id="@+id/redP1Btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FF2623"
            android:onClick="P1TrykkedePåRød"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/player2Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:rotation="180"
        android:text=""
        android:textSize="24sp" />

    <Button
        android:id="@+id/restartGameBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="1"
        android:background="#00000000"
        android:onClick="GameRestart" />


    <TextView
        android:id="@+id/player1Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/p2TopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/player2Timer"
        android:layout_alignBottom="@+id/player2Timer"
        android:layout_centerHorizontal="true"
        android:rotation="180"/>

    <TextView
        android:id="@+id/p1TopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text=""
        android:textAlignment="center"
        android:textSize="25sp" />


</RelativeLayout>
